
page {
  width: 100%;
  height: 100%;
  background: rgb(245, 245, 245);
}
.subject , .reciever{
  display: flex;
  align-items:center;
  /* justify-content:flex-end; */
  height: 40px;
}
.input{
  position: relative;
  background: rgb(255,255,255);
  margin-right: 5vw;
  width:70vw; 
  margin:0px 0px 0px 12px;
  height:30px;
  border-radius:5px;
  border:1px solid #DBDBDB;
}
.input-long{
  width: 100%;
  height: 95%;
  padding: 25rpx 0;
}
.content{
  margin-top: 5%;
  display: flex;
  flex-direction: column;
  height: 60%;
}
.textarea-wrp {
  height: 100%;
  border-radius:10px;
  border:1px solid #DBDBDB;
  margin-top: 2%;
  width: 90%;
  margin-left: 1.5%;
  padding: 0 25rpx;
  background-color: #fff;
}